{% extends "./layout.njk" %} 

{% block head %}
  <title>Busca: {{recipe.title}} </title>
  <link rel="stylesheet" href="main/main.css">
{% endblock %}

{% block content %}
<h3>Buscando por: {{recipe.title}}</h3>

<section class="cards">
  {% for recipe in recipes %}
  <div class="card" id="{{recipe.name}}">
      <div class="card__image-container">
        <a href="/recipes/{{recipe.id}}"><img src="{{recipe.image}}" alt="{{recipe.title}}"></a>
    </div>

    <div class="card__recipe">
      <p class="card__recipe-name">{{recipe.title}}</p>
      <p class="card__author">{{recipe.name}}</p>
    </div>
  </div>
  {% endfor %}
 </section> 
 {% endblock %}

