{% extends "admin/common/layout.njk" %}

{% block content %}

{% block head %}
  <title>Recipe - Admin Foodfy</title>
  <link rel="stylesheet" href="/admin/create.css">
  <link rel="stylesheet" href="/admin/show.css">
{% endblock %}

<h3>Chef: {{chef.name}}</h3>

<a href="/admin/recipes/{{recipe.id}}/edit" class="btn btn-edit">Editar chef</a>

<div>
<div class="avatar" style="background-image: url({{chef.avatar_url}})">
</div>
</div>

<div class="main-title">{{chef.name}}</div>

<div class="author"> receitas</div>

<div class="title">Ingredientes</div>
<div class="list-ingredients">
<ul>
{% for ingredient in recipe.ingredients %}
<li>{{ingredient}}</li>
{% endfor %}
</ul>
</div>

<div class="title">Modo de preparo</div>
<div class="list-steps">
<ul>
{% for step in recipe.preparation %}
<li>{{step}}</li>
{% endfor %}
</ul>
</div>

{% endblock %}

